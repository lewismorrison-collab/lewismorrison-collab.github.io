---
import { Image } from 'astro:assets';

import SocialIcons from './SocialIcons.astro';
import Section from './Section.astro';

const { fullName, title, institute, profilePicture } = Astro.props;
---

<Section bg="primary">
  <div class="flex flex-col-reverse md:flex-row items-center gap-6">
    <div class="flex-1 md:basis-1/2">
      <h1 class="text-4xl font-bold mb-4">
        Welcome! I'm <span class="text-secondary">{fullName}</span>
      </h1>
      <p class="text-xl text-gray-600 mb-4">{title}{institute ? ` at ${institute}` : ''}</p>
      <p class="text-lg mb-6">
        Brief impactful description of your research focus and academic mission. Highlight your key contributions and
        areas of expertise.
      </p>
      <div class="flex gap-4">
        <SocialIcons />
      </div>
    </div>
    <div class="w-full max-w-xs md:max-w-none md:basis-1/2">
      <!-- Add your profile image -->
      <Image src={profilePicture} alt={fullName} class="w-full max-w-sm h-auto mask mask-circle mx-auto" />
    </div>
  </div>
</Section>

